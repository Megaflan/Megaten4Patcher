@inherits TransitionableLayoutComponent

<div class="transition @transitioningClass">
    <div class="layout"></div>
    <div class="animation-cloud"></div>
    <div class="button-header top-row">
        <NavLink class="" href="gamepatch">
            <button type="button" class="button-custom-1">Juego</button>
        </NavLink>
        <NavLink class="" href="credits">
            <button type="button" class="button-custom-2">Créditos</button>
        </NavLink>
        <NavLink class="" href="dlcpatch">
            <button type="button" class="button-custom-3">DLCs</button>
        </NavLink>
    </div>    
    @Body
</div>


@if (!Transition.FirstRender)
{
    <style>
        .transition-in {
            opacity: 0;
        }
    </style>
}

@code {
    private string transitioningClass => Transition.IntoView ? "transition-in" : "transition-out";
}